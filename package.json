{
  "name": "protobuf-support",
  "displayName": "Protobuf Language Support (Protols)",
  "description": "Language features for .proto (proto3 protobuf) files, syntax highlighting and snippets",
  "author": "Anandhu Manoj",
  "license": "MIT",
  "version": "1.1.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/ianandhum/vscode-protobuf-support.git"
  },
  "publisher": "ianandhum",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "proto3",
    "protocol buffers",
    "protocol buffer",
    "protobuf",
    "grpc",
    "protols",
    ".proto"
  ],
  "engines": {
    "vscode": "^1.91.0"
  },
  "activationEvents": [
    "onLanguage:proto3"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "proto3",
        "extensions": [
          ".proto"
        ],
        "aliases": [
          "Protocol Buffers"
        ]
      }
    ],
    "grammars": [
      {
        "language": "proto3",
        "scopeName": "source.proto",
        "path": "./syntaxes/proto3.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "proto3",
        "path": "./snippets/proto3.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Protobuf Language Support",
      "properties": {
        "protobuf-support.protols": {
          "type": "object",
          "description": "Protols configuration",
          "scope": "resource",
          "properties": {
            "path": {
              "type": "string",
              "default": "protols",
              "description": "Path to protols command"
            },
            "args": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [],
              "description": "Command line arguments for protols"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@types/which": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "which": "^4.0.0"
  }
}
